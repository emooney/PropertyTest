pipeline {
    agent any
	environment { 
        CC = 'clang'
    }
    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
    }	
    stages {
        stage('Diagnostic') {
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
        }
		
		 stage('Print Env var') {
            environment { 
                DEBUG_FLAGS = '-g'
            }
            steps {
                sh 'printenv'
            }
        }
		
		 stage('Greetings') {
            steps {
                echo "${params.Greeting} World!"
            }
        }
		
    }
    post {
        always {
            junit '**/target/*.xml'
        }
        failure {
            mail to: eric.mooney@gmail.com, subject: 'The Pipeline failed :('
        }
    }	
}